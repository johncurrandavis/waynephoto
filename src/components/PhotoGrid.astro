---
/**
 * PhotoGrid
 *
 * Presentation-only gallery grid.
 * - Receives preloaded image data at build time
 * - Renders a responsive masonry-style grid
 * - Enhances images with GLightbox at runtime
 *
 * This component does not fetch data or manage state.
 */

import { Image } from 'astro:assets';
import type { Image as ImageType } from '../data/galleryData';

interface Props {
  images: ImageType[];
}

const { images } = Astro.props;
---

<section id="photo-grid" class="w-full mx-auto">
  <div class="px-4">
    <!-- Responsive multi-column grid -->
    <div
      id="photo-grid-columns"
      class="columns-1 sm:columns-2 md:columns-3 lg:columns-4 gap-4"
    >
      {images.map((image) => (
        <a
          href={image.src.src}
          class="photo-item glightbox inline-block mb-4 w-full transition-transform hover:scale-[1.02] hover:z-10 break-inside-avoid"
          data-gallery="gallery1"
          data-type="image"
          data-glightbox={image.description ? `title: ${image.description}` : undefined}
        >
          <!-- Optimised image output -->
          <Image
            src={image.src}
            quality={90}
            format="webp"
            width={image.src.width}
            height={image.src.height}
            class="w-full h-auto object-cover rounded-sm shadow-sm hover:shadow-lg transition-shadow"
            alt={image.title}
          />
        </a>
      ))}
    </div>
  </div>
</section>

<!--
  GLightbox is used to provide modal image viewing for the photo grid.
  This is intentionally initialised globally so individual gallery
  components remain static and JS-free.

  NOTE: GLightbox is intentionally loaded from a CDN.
  The ES-module build (import GLightbox from 'glightbox') works partially,
  but in this project it caused the navigation buttons to disappear.
  The global (CDN) build is stable and fully renders the UI.
-->
<script src="https://cdn.jsdelivr.net/npm/glightbox/dist/js/glightbox.min.js"></script>

<script>
  // Initialise GLightbox once DOM is ready
  document.addEventListener('DOMContentLoaded', () => {
    GLightbox({
      selector: '.glightbox',
      loop: true,
      closeButton: true,
      touchNavigation: true,
      slideEffect: 'fade',

      // Custom SVG icons
      svgClose: `...`,
      svgNext: `...`,
      svgPrev: `...`
    });
  });
</script>

<style>
  /* Ensure navigation icons are visible above images */
  .gclose, .gnext, .gprev {
    display: block !important;
    opacity: 1 !important;
    z-index: 9999;
    color: #fff;
  }

  /* Hover highlight for navigation controls */
  .gnext:hover, .gprev:hover, .gclose:hover {
    color: #ffd700;
  }
</style>
